<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainActivityLayout"
    android:baselineAligned="false"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.jayden.moviebase.MainActivity"
    tools:showIn="@layout/activity_main"
    android:orientation="vertical">

    <fragment
        android:id="@+id/mainActivitySearch"
        android:name="com.jayden.moviebase.MainActivitySearchFragment"
        android:layout_weight="5"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        tools:layout="@layout/search_section" />

    <fragment
        android:id="@+id/mainActivityList"
        android:name="com.jayden.moviebase.MainActivityListFragment"
        android:layout_weight="95"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        tools:layout="@layout/list_row" />
</LinearLayout>
