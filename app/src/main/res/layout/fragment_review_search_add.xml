<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/mainActivitySearch"
        android:name="com.jayden.moviebase.SearchFragment"
        android:layout_weight="5"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        tools:layout="@layout/search_section" />

    <fragment
        android:id="@+id/mainActivityList"
        android:name="com.jayden.moviebase.SearchAddListFragment"
        android:layout_weight="95"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        tools:layout="@layout/list_result" />

</LinearLayout>